{
  "name": "chatspace",
  "version": "3.1.1",
  "main": "backend/index.js",
  "scripts": {
    "server": "nodemon backend/index.js",
    "client": "npm run dev --prefix frontend",
    "build:client": "npm run build --prefix frontend",  
    "build:server": "NODE_ENV=production node backend/index.js",
    "build": "npm run build:client && npm run build:server",
    "start:client": "wait-on http://localhost:8553 && npm run client",
    "start": "concurrently \"npm run server\" \"npm run start:client\""
  },
  "author": "Arpan Ghosh",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^7.6.0",
    "kill-port": "^2.0.1",
    "nodemon": "^3.1.7",
    "wait-on": "^7.0.1"
  }
}
